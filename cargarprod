
const API_BASE = 'http://200.3.127.46:3016/api';

// Cargar productos al iniciar la p√°gina
document.addEventListener('DOMContentLoaded', function() {
    cargarProductosCatalogo();
});

// Funci√≥n para cargar productos en el cat√°logo
async function cargarProductosCatalogo() {
    try {
        const response = await fetch(`${API_BASE}/products`);
        
        if (!response.ok) {
            throw new Error('Error al cargar productos');
        }
        
        const productos = await response.json();
        mostrarProductosEnCatalogo(productos);
        
    } catch (error) {
        console.error('Error:', error);
        document.getElementById('catalogo-productos').innerHTML = `
            <div class="col-span-3 text-center py-8">
                <p class="text-red-500">‚ö†Ô∏è Error cargando el cat√°logo</p>
                <p class="text-sm text-gray-500">Verifica que el servidor est√© funcionando</p>
            </div>
        `;
    }
}

// Funci√≥n para mostrar productos en el cat√°logo
function mostrarProductosEnCatalogo(productos) {
    const contenedor = document.getElementById('catalogo-productos');
    
    if (productos.length === 0) {
        contenedor.innerHTML = `
            <div class="col-span-3 text-center py-12">
                <p class="text-gray-500 text-lg">üéÇ Pr√≥ximamente m√°s tortas deliciosas</p>
                <p class="text-gray-400 mt-2">Estamos preparando nuevas creaciones</p>
            </div>
        `;
        return;
    }
    
    contenedor.innerHTML = productos.map(producto => `
        <div class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
            <div class="h-48 overflow-hidden">
                <img src="${producto.image || 'img/default-cake.jpg'}" 
                     alt="${producto.name}"
                     class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                     onerror="this.src='img/torta-inicio.jpg'">
            </div>
            
            <div class="p-6">
                <h3 class="text-xl font-bold text-gray-800 mb-2">${producto.name}</h3>
                
                ${producto.description ? `
                    <p class="text-gray-600 mb-4 line-clamp-2">${producto.description}</p>
                ` : ''}
                
                <div class="flex justify-between items-center">
                    <span class="text-2xl font-bold text-pink-700">$${parseFloat(producto.price).toFixed(2)}</span>
                    
                    ${producto.stock > 0 ? `
                        <span class="bg-green-100 text-green-800 text-sm px-3 py-1 rounded-full">
                            ‚úÖ En stock
                        </span>
                    ` : `
                        <span class="bg-red-100 text-red-800 text-sm px-3 py-1 rounded-full">
                            ‚ùå Agotado
                        </span>
                    `}
                </div>
                
                ${producto.stock > 0 ? `
                    <button onclick="agregarAlCarrito(${producto.id})" 
                            class="w-full mt-4 bg-pink-700 hover:bg-pink-600 text-white py-2 px-4 rounded-lg transition duration-300">
                        üõí Agregar al carrito
                    </button>
                ` : `
                    <button disabled
                            class="w-full mt-4 bg-gray-400 text-white py-2 px-4 rounded-lg cursor-not-allowed">
                        üì¶ Sin stock
                    </button>
                `}
            </div>
        </div>
    `).join('');
}

// Funci√≥n para agregar al carrito (puedes implementarla despu√©s)
function agregarAlCarrito(productoId) {
    alert('üõí Funcionalidad de carrito pr√≥ximamente! Producto ID: ' + productoId);
    // Aqu√≠ puedes implementar la l√≥gica del carrito de compras
}
